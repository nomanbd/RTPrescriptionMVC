                        <li><a href="#"><i class="fa fa-user-md"></i> <span>Oncologist</span></a></li>
                        <li class="treeview">
                            <a href="#"><i class="fa fa-hospital-o"></i> <span>Hospital</span> <i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="treeview-menu">
                                <li><a href="#">Radiation</a></li>
                                <li><a href="#">Imaging lab</a></li>
                            </ul>
                        </li>
                    </ul><!-- /.sidebar-menu -->
